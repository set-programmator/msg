{
  "name": "codecept-playwright-bdd",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test:ui:headed": "cross-env OUTPUT_DIR=$UI_OUTPUT_DIR codeceptjs run --config ./codeceptjs-tests/codecept.conf.ts --plugins allure",
    "test:ui:headless": "cross-env HEADLESS=true OUTPUT_DIR=$UI_OUTPUT_DIR codeceptjs run --config ./codeceptjs-tests/codecept.conf.ts --plugins allure",

    "test:ui:headed:all": "npm run test:ui:headed && npm run generate:ui-report && npm run open:ui-report",
    "test:ui:headless:all": "npm run test:ui:headless && npm run generate:ui-report && npm run open:ui-report",

    "generate:ui-report": "cross-env OUTPUT_DIR=$UI_OUTPUT_DIR ts-node ./scripts/generateReport.ts",
    "open:ui-report": "cross-env ts-node ./scripts/openLatestReport.ts"
,

    "test:api": "cross-env OUTPUT_DIR=$API_OUTPUT_DIR codeceptjs run --config ./api-tests/api.conf.ts --plugins allure",
    "generate:api-report": "cross-env OUTPUT_DIR=$API_OUTPUT_DIR ts-node ./scripts/generateReport.ts",
    "open:api-report": "allure open $API_OUTPUT_DIR/allure-report",

    "list-reports-ui": "cross-env OUTPUT_DIR=$UI_OUTPUT_DIR ts-node ./scripts/listReports.ts",
    "open-report-interactive-ui": "cross-env OUTPUT_DIR=$UI_OUTPUT_DIR ts-node ./scripts/interactiveOpenReport.ts",

    "list-reports-api": "cross-env OUTPUT_DIR=$API_OUTPUT_DIR ts-node ./scripts/listReports.ts",
    "open-report-interactive-api": "cross-env OUTPUT_DIR=$API_OUTPUT_DIR ts-node ./scripts/interactiveOpenReport.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@codeceptjs/allure-legacy": "^1.0.2",
    "@codeceptjs/configure": "^1.0.4",
    "@cucumber/cucumber": "^11.3.0",
    "@types/node": "^22.15.21",
    "@wdio/allure-reporter": "^9.14.0",
    "allure-commandline": "^2.34.0",
    "codeceptjs": "^3.7.3",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^8.0.0",
    "playwright": "^1.52.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "dotenv": "^16.5.0"
  }
}